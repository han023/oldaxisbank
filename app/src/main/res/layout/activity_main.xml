<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:foregroundGravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_gravity="start"
            android:foregroundGravity="top"
            android:src="@drawable/top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Login to internet banling"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_margin="10sp"
            app:cardCornerRadius="50sp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="5sp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/mpin"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:background="@drawable/red_bg_round"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="Nobile No / MPIN"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/cust"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginStart="4sp"
                    android:background="@drawable/white_bg_round"
                    android:text="LoginID / Customer ID/Password"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Registerd Mobile No:"/>


            <EditText
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:maxLength="10"
                android:padding="10sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="mPIN:"/>


            <EditText
                android:id="@+id/e3"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/red_bg_round"
            android:textColor="@color/white"
            android:text="Login"/>

        <ImageView
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:src="@drawable/bottom"
            android:contentDescription="@string/todo" />




    </LinearLayout>

</ScrollView>